<div class="wrapper">
		<h2>Edit your job information</h2>
	<div class="form-group">
		<%= form_for @job do |f| %>
			<%= f.hidden_field :user_id, value: current_user.id %>
		  <br>
		 	<%= f.label :title %>
		 	<%= f.text_field :title %>
			<br>
			<br>
			<%= f.label :location %>
			<%= f.text_field :location %>
		  <br>
			<br>
		  <%= f.label :cost %>
		  <%= f.number_field :cost %>
		  <br>
			<br>
		  <%= f.label :description %>
		  <%= f.text_field :description %>
		  <br>
			<br>
		  <%= f.label :category %>
		  <%= f.select :category,["Select One", "Yard Work", "Surveys", "Carpentry", "Pluming", "Automotive", "I.T.", "Design/Art", "Electrical", "Moving", "Personal Shopper", "Babysitter", "Locksmith", "Other"] %>
		  <br>
			<br>
		  <%= f.submit "Submit", :class=> "submitty" %>
		<% end %>
	</div>
</div>
